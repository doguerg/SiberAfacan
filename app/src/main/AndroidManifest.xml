<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doguerg.siberafacan">

    <!-- Youtube api kullanabilmek için internet izni -->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.doguerg.siberafacan.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    <!-- yeni eklenen sayfaların tanımlanması -->
        <activity android:name="com.doguerg.siberafacan.Video"  android:label="@string/app_name"  android:parentActivityName="com.doguerg.siberafacan.MainActivity" >
        </activity>

        <activity android:name="com.doguerg.siberafacan.Yazi"  android:label="@string/app_name"  android:parentActivityName="com.doguerg.siberafacan.MainActivity" >
        </activity>

        <activity android:name="com.doguerg.siberafacan.Youtube"  android:label="@string/app_name"  android:parentActivityName="com.doguerg.siberafacan.MainActivity" >
        </activity>

        <activity android:name="com.doguerg.siberafacan.Metinler"  android:label="@string/app_name"  android:parentActivityName="com.doguerg.siberafacan.Yazi" >
        </activity>

    </application>

</manifest>